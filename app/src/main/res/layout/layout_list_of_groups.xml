<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:clickToClose="true"
    app:drag_edge="left"
    app:layout_collapseMode="parallax"
    app:layout_optimizationLevel="chains"
    app:show_mode="pull_out">
    <!-- Bottom layout with two buttons (delete and edit) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="72dp">

        <ImageView
            android:id="@+id/delete_group"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/deleteSwipe"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/ic_delete_white" />

        <ImageView
            android:id="@+id/edit_group"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/editSwipe"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/ic_edit_white" />
    </LinearLayout>
    <!--end of bottom layout-->

    <!--surface layout-->
    <include
        android:id="@+id/surface"
        layout="@layout/surface_list_of_words" />
    <!--the end of surface layout-->
</com.daimajia.swipe.SwipeLayout>